# Broker A Environment Configuration
# Conservative strategy focused on XAUUSD and BTCUSD

# ============================================================================
# API CONFIGURATION
# ============================================================================
API_BASE_URL=http://host.docker.internal:8000/mt5
ACCOUNT_TYPE=daily
API_TIMEOUT=10

# ============================================================================
# CONFIGURATION PATHS
# ============================================================================
CONF_FOLDER_PATH=/app/config
RESTRICTION_CONF_FOLDER_PATH=/app/config/restrictions

# ============================================================================
# TRADING MODE
# ============================================================================
TRADE_MODE=live

# ============================================================================
# SYMBOL CONFIGURATION
# ============================================================================
SYMBOLS=XAUUSD,BTCUSD

# ============================================================================
# DEFAULT RISK PARAMETERS
# ============================================================================
PIP_VALUE=100
POSITION_SPLIT=4
SCALING_TYPE=equal
ENTRY_SPACING=0.1
RISK_PER_GROUP=1000

# ============================================================================
# SYMBOL-SPECIFIC CONFIGURATION
# ============================================================================

# XAUUSD (Gold)
XAUUSD_PIP_VALUE=100
XAUUSD_POSITION_SPLIT=4
XAUUSD_SCALING_TYPE=equal
XAUUSD_ENTRY_SPACING=0.1
XAUUSD_RISK_PER_GROUP=1000

# BTCUSD (Bitcoin)
BTCUSD_PIP_VALUE=100
BTCUSD_POSITION_SPLIT=2
BTCUSD_SCALING_TYPE=equal
BTCUSD_ENTRY_SPACING=1.0
BTCUSD_RISK_PER_GROUP=1000

# ============================================================================
# RISK MANAGEMENT
# ============================================================================
DAILY_LOSS_LIMIT=5000
NEWS_RESTRICTION_DURATION=2
MARKET_CLOSE_RESTRICTION_DURATION=10
DEFAULT_CLOSE_TIME=23:40:00+03:00
