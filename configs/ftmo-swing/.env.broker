# Broker A Environment Configuration
# Conservative strategy focused on XAUUSD and BTCUSD

# ============================================================================
# API CONFIGURATION
# ============================================================================
API_BASE_URL=http://host.docker.internal:8000/mt5
# ACCOUNT_TYPE=swing
ACCOUNT_TYPE=daily
API_TIMEOUT=10

# ============================================================================
# CONFIGURATION PATHS
# ============================================================================
CONF_FOLDER_PATH=/app/config
RESTRICTION_CONF_FOLDER_PATH=/app/config/restrictions

# ============================================================================
# TRADING MODE
# ============================================================================
TRADE_MODE=live

# ============================================================================
# SYMBOL CONFIGURATION
# ============================================================================
SYMBOLS=XAUUSD,BTCUSD

# ============================================================================
# DEFAULT RISK PARAMETERS
# ============================================================================
PIP_VALUE=100
POSITION_SPLIT=4
SCALING_TYPE=equal
ENTRY_SPACING=0.1
RISK_PER_GROUP=1000

# ============================================================================
# SYMBOL-SPECIFIC CONFIGURATION
# ============================================================================

# XAUUSD (Gold)
XAUUSD_PIP_VALUE=100
XAUUSD_POSITION_SPLIT=4
XAUUSD_SCALING_TYPE=equal
XAUUSD_ENTRY_SPACING=0.1
XAUUSD_RISK_PER_GROUP=1000

# BTCUSD (Bitcoin)
BTCUSD_PIP_VALUE=100
BTCUSD_POSITION_SPLIT=2
BTCUSD_SCALING_TYPE=equal
BTCUSD_ENTRY_SPACING=1.0
BTCUSD_RISK_PER_GROUP=1000

# ============================================================================
# RISK MANAGEMENT
# ============================================================================
DAILY_LOSS_LIMIT=5000
NEWS_RESTRICTION_DURATION=2
MARKET_CLOSE_RESTRICTION_DURATION=10
DEFAULT_CLOSE_TIME=23:40:00+03:00

# ============================================================================
# AUTOMATION CONTROL
# ============================================================================
# Enable/disable automated trading at startup (true/false, 1/0, yes/no, on/off)
# When disabled, no new positions will be opened automatically, but existing
# SL/TP orders remain active
AUTOMATION_ENABLED=true

# Path to JSON file for persisting automation state across restarts
# This file stores whether automation is enabled/disabled
AUTOMATION_STATE_FILE=config/automation_state.json

# Path to text file for manual toggle control (temporary Phase 1 interface)
# Write "ENABLE", "DISABLE", or "QUERY" to this file to control automation
AUTOMATION_TOGGLE_FILE=config/toggle_automation.txt

# Enable/disable the file watcher for toggle file monitoring
AUTOMATION_FILE_WATCHER_ENABLED=true

# File watcher polling interval in seconds (1-60)
# How often the system checks the toggle file for commands
AUTOMATION_FILE_WATCHER_INTERVAL=5

# ============================================================================
# API AUTHENTICATION
# ============================================================================
# JWT secret key for token signing (CHANGE THIS IN PRODUCTION!)
API_SECRET_KEY=CHANGE-THIS-IN-PRODUCTION-USE-LONG-RANDOM-STRING

# Access token expiration time in minutes
API_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Refresh token expiration time in days
API_REFRESH_TOKEN_EXPIRE_DAYS=7

# Path to credentials file (JSON format with username: hashed_password)
API_CREDENTIALS_FILE=configs/api_credentials.json
